<% if current_user.super_admin %>
  <%= link_to "create a project", new_project_path %>
<% end %>
<br>
<br>

<div class="container">
  <h1>Projects</h1>
  <p>Projects you are tied to:</p>            
  <br>
  <h4> PROJECTS YOU ARE AN ADMIN IN </h4>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Project Name:</th>
        <th>Show:</th>
        <% if current_user.super_admin %>
          <th>Edit:</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @user_ad_projs.each do |project| %>	
      <tr>
        <td> <%= project.project_name %> </td>
        <td> <%= link_to "Show", project %> </td>
        <% if current_user.super_admin %>
          <td> <%= link_to "Edit", edit_project_path(project) %> </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>


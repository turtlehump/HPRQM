<div class="page-header"><h1>Releases</h1></div>
<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Release name:</th>
      <th>Project name:</th>
      <th>Release id:</th>
      <th>Start date:</th>
      <th>End date:</th>
      <th>Show:</th>
      <th>Edit:</th>
    </tr>
  </thead>
  <tbody>
    <% @releases.each do |release| %>
      <tr>
	<td><%= release.name %></td>
	<td><%= Project.find(release.project_id).project_name %></td>
	<td><%= release.sdlcm_release_id %></td>
	<td><%= release.start_date%></td>
	<td><%= release.end_date%></td>
        <td><%= link_to 'Show', release %></td>
        <td><%= link_to 'Edit', edit_release_path(release) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Release(path need works:proj_id)', root_path %>

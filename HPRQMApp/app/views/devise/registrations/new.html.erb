<h2>Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label 'First Name' %><br />
    <%= f.text_field :f_name, autofocus: true, required: true %> 
  </div>
  <div class="field">
    <%= f.label 'Middle Name' %><br />
    <%= f.text_field :m_name %> 
  </div>
  <div class="field">
    <%= f.label :l_name %><br />
    <%= f.text_field :l_name, required: true %> 
  </div>
  <div class="field">
    <%= f.label 'User ID' %><br />
    <%= f.number_field :user_id %> 
  </div>



  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<h2>Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label 'First_Name' %><br />
    <%= f.text_field :f_name, autofocus: true, required: true %> 
  </div>
  <div class="field">
    <%= f.label 'Middle_Name' %><br />
    <%= f.text_field :m_name %> 
  </div>
  <div class="field">
    <%= f.label :Last_Name %><br />
    <%= f.text_field :l_name, required: true %> 
  </div>
  <div class="field">
    <%= f.label "HP_Employee_Number" %><br />
    <%= f.number_field :employee_num %> 
  </div>



  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.label :Password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <div class="field">
    <%= f.label :Password_Confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
